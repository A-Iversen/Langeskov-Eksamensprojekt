<Application x:Class="MVVM.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MVVM"
             Startup="Application_Startup"
             >
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                
                <ResourceDictionary Source="View/Styles/ColorSchemes.xaml"/>
                <ResourceDictionary Source="View/Styles/Vectors.xaml"/>
                
                <ResourceDictionary Source="View/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="/View/Styles/DataGridStyles.xaml"/>
                <ResourceDictionary Source="/View/Styles/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="/View/Styles/ComboBoxStyles.xaml"/>
                <ResourceDictionary Source="/View/Styles/CalenderStyles.xaml"/>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>         
</Application>
