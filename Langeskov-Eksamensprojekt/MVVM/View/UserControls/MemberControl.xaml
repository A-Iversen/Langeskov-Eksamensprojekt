<UserControl x:Class="MVVM.View.UserControls.MemberControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVM.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="510" d:DesignWidth="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" CornerRadius="0,0,0,20"
                d:Background="{StaticResource bg}">

        </Border>

        <Border Grid.Column="1" CornerRadius="0,0,20,0"
                d:Background="{StaticResource bgDark}">

        </Border>
    </Grid>
</UserControl>
