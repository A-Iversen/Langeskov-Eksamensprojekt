<Window x:Class="MVVM.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1000"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">
    
    <Border Background="{StaticResource bgDark}" CornerRadius="20,20,20,20"
             Padding="3" BorderBrush="{StaticResource highlight}">
        
        <Grid Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Navigation Panel-->
            <Border Background="{StaticResource bgLight}" CornerRadius="20,20,20,0" 
                    Grid.ColumnSpan="2" Grid.RowSpan="3">
                <Border.Effect>
                    <DropShadowEffect Opacity="0.1"/>
                </Border.Effect>

                <StackPanel Orientation="Horizontal" Margin="200,0,0,0">
                    <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource IconPrinters}" IsChecked="True">
                        
                        <Viewbox Width="50" Height="50">
                            <Path Style="{StaticResource IconUsers}" 
                                  Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"/>
                        </Viewbox>
                    </RadioButton>

                    
                    <RadioButton Style="{StaticResource menuButton}"  Tag="{StaticResource IconUsers}">
                       
                        <Viewbox Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Path Style="{StaticResource IconPrinters}" Fill="{StaticResource text}"/>
                        </Viewbox>
                    
                    </RadioButton>
                </StackPanel>
            </Border>
            
            
            <!--ControlBar-->
            <StackPanel Margin="0,0,10,0" Grid.ColumnSpan="2" FlowDirection="RightToLeft" Orientation="Horizontal"
                        MouseLeftButtonDown="StackPanel_MouseLeftButtonDown" Background="Transparent">
                
                <Button Style="{StaticResource controlButton}" Tag="{StaticResource danger}"
                        Click="CloseClick" Margin="0,0,20,0">
                    
                        <Path Style="{StaticResource IconClose}" Stretch="Fill"
                              Width="12" Height="12"
                              Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                </Button>

                <Button Style="{StaticResource controlButton}" Tag="{StaticResource info}"
                        Click="MaximizeClick" Margin="0,0,20,0">
                        
                        <Path Style="{StaticResource IconMaximize}" Stretch="Fill" 
                              Width="12" Height="12"
                              Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                </Button>
            
                <Button Style="{StaticResource controlButton}" Tag="{StaticResource info}"
                        Click="MinimizeClick" Margin="0,0,20,0">
                    
                    <Viewbox Width="15" Height="10">
                        <Path Style="{StaticResource IconMinimize}" Stretch="Fill"
                              Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                    </Viewbox>
                </Button>
        
            </StackPanel>    
            
            
            <!--Left Panel-->
            <Border Background="{StaticResource bg}" CornerRadius="0,10,20,20"
                    Grid.Row="2" Grid.RowSpan="2">
            </Border>

            <ContentControl Grid.ColumnSpan="2" Grid.Row="2"
                            Content="{Binding CurrentView}"/>
        </Grid>        
    </Border>
</Window>
