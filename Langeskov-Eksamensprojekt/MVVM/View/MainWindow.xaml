<Window x:Class="MVVM.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1000"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Border Background="{StaticResource bgDark}" CornerRadius="20,20,20,20"
             Padding="3,0,4,5">

        
        <Grid Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <!--ControlBar-->
            <Border Background="{StaticResource companyPrimary}"
                    Grid.Column="1" Grid.ColumnSpan="2"
                    CornerRadius="0,10,10,30" 
                    MouseLeftButtonDown="StackPanel_MouseLeftButtonDown">
                                <Border.Effect>
                    <DropShadowEffect Direction="-90" Opacity="0.25" 
                                      BlurRadius="10" ShadowDepth="4">
                    </DropShadowEffect>
                </Border.Effect>            
                
                <StackPanel Margin="0,0,10,0" Grid.ColumnSpan="3" FlowDirection="RightToLeft" Orientation="Horizontal">
                
                    <Button Style="{StaticResource controlButton}" Tag="{StaticResource danger}"
                            Click="CloseClick" Margin="0,0,30,0">
                    
                            <Path Style="{StaticResource IconClose}" Stretch="Fill"
                                  Width="12" Height="12"
                                  Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                    </Button>

                    <Button Style="{StaticResource controlButton}" Tag="{StaticResource info}"
                            Click="MaximizeClick" Margin="0,0,30,0">
                        
                            <Path Style="{StaticResource IconMaximize}" Stretch="Fill" 
                                  Width="12" Height="12"
                                  Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                    </Button>
            
                    <Button Style="{StaticResource controlButton}" Tag="{StaticResource info}"
                            Click="MinimizeClick" Margin="0,0,30,0">
                    
                        <Viewbox Width="15" Height="10">
                            <Path Style="{StaticResource IconMinimize}" Stretch="Fill"
                                  Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        </Viewbox>
                    </Button>
        
                </StackPanel>                    
            </Border>
            
            <!--Borders for Top Panel Background-->
            <Border Background="{StaticResource bgLight}" CornerRadius="20,20,0,0" Grid.RowSpan="2" Grid.ColumnSpan="3" Panel.ZIndex="-1"/>
            <Border Background="{StaticResource bgLight}" CornerRadius="0,0,20,20" Grid.Column="2" Grid.Row="2" Grid.RowSpan="1" Panel.ZIndex="-1">
                <Border.Effect>
                    <DropShadowEffect Direction="-90" Opacity="0.1" 
                                      BlurRadius="5" ShadowDepth="4">
                    </DropShadowEffect>
                </Border.Effect>            
            </Border>
            <Border Background="{StaticResource bgLight}" CornerRadius="20,0,40,0" Grid.RowSpan="3" Grid.ColumnSpan="2" Panel.ZIndex="-1"/>            
            
            
            <!--Left Panel-->
            <Border Background="{StaticResource bg}" CornerRadius="0,20,20,20"
                    Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="2"
                    BorderThickness="0,2,1,0">
                <Border.Effect>
                    <DropShadowEffect Direction="45" Opacity="0.1" 
                                      BlurRadius="5" ShadowDepth="4">
                    </DropShadowEffect>
                </Border.Effect>
            </Border>

            
            <!--Company Logo-->
            <Border Background="{StaticResource companyPrimary}" CornerRadius="20,0,39,10" 
                    Grid.RowSpan="2" Grid.ColumnSpan="2"
                    HorizontalAlignment="Left"
                    Margin="-5,0,0,2" Width="100">
                
                <Border.Effect>
                    <DropShadowEffect Direction="-59" Opacity="0.1" 
                                      BlurRadius="5" ShadowDepth="4">
                    </DropShadowEffect>
                </Border.Effect>

                <Viewbox Width="60" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                         Margin="5,5,10,10">
                    <Path Style="{StaticResource CompanyLogo}" Stretch="Uniform"
                          Fill="White"/>                    
                </Viewbox>
            </Border>

            <!--Navigation Panel-->
            <Border CornerRadius="0,20,20,20" 
                    Grid.Column="2" Grid.RowSpan="3">
                <StackPanel Orientation="Horizontal">
                    
                    <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource IconPrinters}" IsChecked="True"
                                 Command="{Binding ShowMemberViewCommand}">
                        
                        <Viewbox Width="50" Height="100" VerticalAlignment="Bottom"> 
                            <Path Style="{StaticResource IconUsers}"
                                  Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"/>
                        </Viewbox>
                    </RadioButton>

                    
                    <RadioButton Style="{StaticResource menuButton}"  Tag="{StaticResource IconUsers}"
                                 Command="{Binding ShowAccountingViewCommand}">

                        <Viewbox Width="60" Height="110" VerticalAlignment="Bottom">
                            <Path Style="{StaticResource IconAccounting}" Fill="{StaticResource text}"/>
                        </Viewbox>
                    
                    </RadioButton>
                    
                </StackPanel>
            </Border>            
            
            <ContentControl Grid.ColumnSpan="3" Grid.Row="3"
                            Content="{Binding CurrentView}"/>
        </Grid>      
        
        
        
    </Border>
</Window>
